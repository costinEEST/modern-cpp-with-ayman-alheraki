{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug with ASan",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}",
      "args": [],
      "cwd": "${fileDirname}",
      "stopAtEntry": false,
      "externalConsole": false,
      "MIMode": "lldb",
      "preLaunchTask": "C++: build (debug + asan)",
      "environment": [
        {
          "name": "ASAN_OPTIONS",
          "value": "detect_leaks=1:abort_on_error=1"
        }
      ]
    }
  ]
}
