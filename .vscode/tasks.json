{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C++: build active file (clang++)",
      "type": "shell",
      "command": "/usr/local/opt/llvm/bin/clang++",
      "args": [
        "-std=c++20",
        "-Wall",
        "-Wextra",
        "-pedantic",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "C++: build (debug + asan)",
      "type": "shell",
      "command": "/usr/local/opt/llvm/bin/clang++",
      "args": [
        "-std=c++20",
        "-g",
        "-O1",
        "-fsanitize=address,undefined",
        "-fno-omit-frame-pointer",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    }
  ]
}
